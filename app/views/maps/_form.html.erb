      <h2><%= pluralize(@map.errors.count, "error") %> prevented this map from saving </h2>
      <ul>
        <%= @map.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul >
    </div>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
